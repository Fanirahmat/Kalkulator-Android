<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GrafikSignal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grafik Kocak"
            android:layout_marginTop="50dp"
            android:textSize="27sp"
            android:fontFamily="sans-serif"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <RelativeLayout
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <android.support.v7.widget.CardView
                android:id="@+id/analog"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Analog"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/digital"
                android:layout_width="100dp"
                android:layout_toEndOf="@id/analog"
                android:layout_height="100dp"
                android:backgroundTint="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Digital"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/carrier"
                android:layout_width="100dp"
                android:layout_toEndOf="@id/digital"
                android:layout_height="100dp"
                android:backgroundTint="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carrier"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fm"
                android:layout_width="100dp"
                android:layout_below="@id/analog"
                android:layout_height="100dp"
                android:backgroundTint="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FM"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/am"
                android:layout_width="100dp"
                android:layout_below="@id/carrier"
                android:layout_toEndOf="@id/fsk"
                android:layout_height="100dp"
                android:backgroundTint="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AM"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ask"
                android:layout_width="100dp"
                android:layout_below="@id/am"
                android:layout_toEndOf="@id/fsk"
                android:layout_height="100dp"
                android:backgroundTint="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ASk"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/psk"
                android:layout_width="100dp"
                android:layout_below="@id/fm"
                android:layout_height="100dp"
                android:backgroundTint="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PSK"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fsk"
                android:layout_width="100dp"
                android:layout_below="@id/am"
                android:layout_toEndOf="@id/psk"
                android:layout_height="100dp"
                android:backgroundTint="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FSK"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>